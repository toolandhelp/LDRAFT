                            },
                            error: function (xmlHttpRequest, textStatus, errorThrown) {
                                MISSY.iDebugAjaxError(xmlHttpRequest, textStatus, errorThrown);
                                $("#camera_wrap_4").html("数据加载失败,请稍后再试.");
