    <script>

        $(window).load(function () {
            setInterval(initWindow(), 1000);
          
        });

        //改变iframe 大小
        function initWindow() {
            InitFrameSize();
            $(window).resize(function () {
                InitFrameSize();
            });
            MessShow();
        }

        function InitFrameSize() {
            var contentHeight = $(document).find("body").height();
            var frame = $("#main", window.parent.document);
            frame.height(contentHeight + 10);
        }

        function MessShow() {
            var isShow = $("#CommentsShow").attr("isShow");
            if (isShow=='true') {
                $("#respond").show();
            } else
            {
                $("#respond").hide();
            }
           
        }

